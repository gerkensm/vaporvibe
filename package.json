{
  "name": "serve-llm",
  "version": "1.1.0",
  "description": "Sourcecodeless web app server powered by LLMs.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "serve-llm": "dist/index.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "npm run build:fe && tsc && node scripts/copy-loading-shell-assets.mjs",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "dev": "node scripts/dev.mjs",
    "start": "node dist/index.js",
    "build:fe": "cd frontend && npm install && npm run build",
    "dev:be": "tsx --watch src/index.ts",
    "dev:fe": "cd frontend && npm run dev",
    "build:sea": "scripts/build-macos-sea.sh",
    "build:sea:signed": "NOTARIZE=true scripts/build-macos-sea.sh",
    "build:sea:submit": "scripts/notarize-macos-sea.sh",
    "build:sea:verify": "scripts/verify-notarization.sh",
    "build:macos:icon": "scripts/macos-app/create-icon-assets.sh",
    "build:macos:app": "scripts/macos-app/build-app-bundle.sh",
    "build:macos:sign": "scripts/macos-app/sign-app-bundle.sh",
    "build:macos:notarize-app": "scripts/macos-app/notarize-app.sh app",
    "build:macos:dmg": "scripts/macos-app/create-dmg.sh",
    "build:macos:notarize-dmg": "scripts/macos-app/notarize-app.sh dmg",
    "build:macos:verify": "scripts/macos-app/verify-app-notarization.sh",
    "build:macos": "npm run build:sea:signed && npm run build:macos:app && npm run build:macos:sign && npm run build:macos:notarize-app && npm run build:macos:dmg && npm run build:macos:notarize-dmg"
  },
  "keywords": [
    "llm",
    "cli",
    "server"
  ],
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "@google/genai": "^1.22.0",
    "keytar": "^7.9.0",
    "open": "^10.2.0",
    "openai": "^6.1.0",
    "pino": "^9.3.0",
    "pino-pretty": "^11.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "postject": "^1.0.0-alpha.6",
    "tsx": "^4.16.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
